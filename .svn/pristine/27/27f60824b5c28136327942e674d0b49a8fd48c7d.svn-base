<ion-header>
<ion-toolbar color="primary">
  <ion-buttons slot="start">
    <ion-menu-button></ion-menu-button>
  </ion-buttons>
  <ion-title>
    Paypal for App
  </ion-title>
</ion-toolbar>
</ion-header>

<ion-content>
<ion-card class="welcome-card">
  <ion-card-header>
    <ion-row>
      <ion-col>
        Total Payment
      </ion-col>
      <ion-col>
        {{currencyIcon}}{{paymentAmount}}
      </ion-col>
    </ion-row>
  </ion-card-header>
  <ion-card-content>
    <ion-button expand="full" color="success" (click)="paypalPayment()">Pay with PayPal</ion-button>
  </ion-card-content>
</ion-card>
</ion-content>