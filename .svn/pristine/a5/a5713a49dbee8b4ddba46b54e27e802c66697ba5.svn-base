ion-toolbar{
    --background:#233658;
}
ion-title{
    color:#fff;
    font-weight: 300;
    text-transform: capitalize;
    font-size: 18px;
    text-align: center;
}
h1.heading_text{
    text-align: center;
    margin-top: 40px;
    font-weight: 400;
    text-transform: uppercase;
    font-size: 30px;
    color: #1f1f1f;
    letter-spacing:1px;
}
h1.heading_text > span{
    color: #fd8900;
    font-weight: 600;
    font-family: Proxima-Nova-Bold;
    font-size: 32PX;
}
p.signin_text{
    margin-top: 40px;
    text-align: center;
    color: #1f1f1fbf;
    font-family: Proxima-Nova-Thin;
    font-weight: 600;
    padding: 0px 12px;
    font-size: 15px;
}
.abs_icon{
    position: absolute;
    top: 34px;
    left: 4.5%;
}
.abs_icon > img{
    width:20px;
}
.form_container > ion-label{
    padding-left: 13%;
}
.form_container ion-input{
    width: 87%;
    margin: 0 0 0 auto;
    border-bottom: 1px solid #ccc;
    font-size:12px;
    --padding-top: 10px;
    --padding-bottom: 10px;
}
.sign_in_button{
    text-align:center;
}
.sign_in_button > ion-button{
    font-weight: 300;
    width: 90%;
    margin-top: 30px;
    box-shadow: 0px 4px 8px 1px #fed19c;
    border-radius: 30px;
    --background: #fd8900;
    --background-activated: #fd8900;
}
.sign_in_button > button{
    font-weight: 300;
    width: 90%;
    margin-top: 30px;
    padding:15px;
    color:#fff;
    box-shadow: 0px 4px 8px 1px #fed19c;
    border-radius: 30px;
    background: #fd8900;
}
.sign_in_button > button:focus{
    outline:none;
}
.sign_in_button > button[disabled]{
    background: rgba(253, 137, 0, 0.48);
}
.form_container > ion-label::after{
    content:"*";
    color: red;
    margin-left: 3px;
}
ion-footer ion-title{
    color: #1f1f1f;
    padding: 0px;
    font-size: 12px;
    word-spacing: 2px;
    font-family: proxima-nova-alt-regular;
} 
ion-footer ion-title  > span > a{
    color: #fd8900;
    font-weight: 500;
    text-decoration: none;
} 
.error_cls{
    color: red;
    font-size: 12px;
    padding-top: 10px;
    padding-left: 45px;
}
.error_inc_user{
    color: red;
    margin-left: auto;
    margin-right: auto;
    font-size: 13px;
}
.forgot_pass{
    float: right;
    padding-right: 35px;
    color: #fd8900;
    font-weight: 600;
    font-size: 12px;
}
.forgot_pass > ion-row:focus{
    outline:none;
}



