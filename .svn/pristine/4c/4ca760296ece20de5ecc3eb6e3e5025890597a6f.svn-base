<ion-header>
  <ion-toolbar>
    <ion-buttons slot="start">
        <!-- routerLink="/home" -->
        <ion-back-button >
        </ion-back-button>
    </ion-buttons>
    <ion-title>Active Plan</ion-title>
  </ion-toolbar>
</ion-header>
<ion-content no-padding>
  <ion-grid no-padding>
    <ion-row no-padding>
      <ion-col size="12" no-padding>
        <div class="basic_plan_bg">
          <div class="basic_plan_main">
            <div class="img_plan">
              <ion-avatar>
                <img src="assets/images/plans/view_plan.png">
              </ion-avatar>
            </div>
            <div class="plan_head">
              <ion-text>
                <p>Active Plan</p>
              </ion-text>
            </div>
          </div>
        </div>
      </ion-col>
      <ion-col size="12" no-padding>
        	<ngx-spinner bdColor="rgba(255, 255, 255, 0.4)" size="medium" color="#233658" type="line-scale"></ngx-spinner>
            <div class="tabs_main">
              <ul class="nav nav-tabs">
                <li><a data-toggle="tab" href="#home" class="active" *ngFor="let plan of active_plan" [hidden]="plan.plan_status!='Active'">{{plan.plan_name}}</a></li>
              </ul>  
            <div class="tab-content" *ngFor="let plan of active_plan" [hidden]="plan.plan_status!='Active'" >
              <div id="home" class="tab-pane fade in active show">
                  <div class="plan_cost">
                    <span class="sign"><i class="fa fa-usd" aria-hidden="true"></i></span>
                    <span class="actual_cost">{{plan.price}}</span>
                    <span class="monthly">/yearly</span> 
                  </div>
                  <div class="plan_list">
                    <ion-list no-padding>
                      <ion-item no-padding>
                        <ion-label><span class="checked"><i class="fa fa-check" aria-hidden="true"></i></span><span class="active_text">Plan activated</span> <span class="active_date"> | {{plan.plan_start_date | date: 'dd-MM-yyyy'}}</span></ion-label>
                      </ion-item>
                      <ion-item no-padding>
                        <ion-label><span class="checked"><i class="fa fa-check" aria-hidden="true"></i></span><span class="active_text">Plan deactivated</span> <span class="active_date"> | {{plan.plan_end_date | date: 'dd-MM-yyyy'}}</span></ion-label>
                      </ion-item>
                    </ion-list>
                  </div>
                  <div class="plan_info">
                    <ion-text><p>Basic Information</p></ion-text>
                  </div>
                  <div class="plan_para">
                    <ion-text><p>{{plan.plan_desc}}</p></ion-text>
                  </div>  
                  <div class="plan_list">
                    <ion-list no-padding>
                      <ion-item no-padding *ngIf="plan.featured_listing!='No'">
                        <ion-label><span class="checked"><i class="fa fa-check" aria-hidden="true"></i></span>Featured listing active</ion-label>
                      </ion-item>
                      <ion-item no-padding>
                        <ion-label><span class="checked"><i class="fa fa-check" aria-hidden="true"></i></span>Add Upto {{plan.number_of_request}} Lawyer<label *ngIf="plan.number_of_request.length>1">s</label></ion-label>
                      </ion-item>
                    </ion-list>
                  </div>
              </div>
            </div>
          </div>
          <div [hidden]="plan.plan_status!=''">
            <div class="tab-content">
              <div id="home" class="tab-pane fade in active show">
                <div class="plan_info">
                    <ion-text><p style="text-align: center;">Basic Information</p></ion-text>
                  </div>
                  <div class="plan_list">
                    <ion-list no-padding>
                      <ion-item no-padding>
                        <ion-label style="padding-left: 40px;position: relative;overflow: visible;white-space: normal;">
                        <span style="position: absolute;left: 0;top: calc(50% - 15px);" class="checked"><i class="fa fa-check" aria-hidden="true"></i></span>Your basic plan is activated </ion-label>
                      </ion-item>
                      <ion-item no-padding>
                        <ion-label style="padding-left: 40px;position: relative;overflow: visible;white-space: normal;">
                          <span style="position: absolute;left: 0;top: calc(50% - 15px);" class="checked"><i class="fa fa-check" aria-hidden="true"></i></span>Your basis plan is activated which is applicable for 7 days.</ion-label>
                      </ion-item>
                    </ion-list>
                  </div>
              </div>
            </div>
          </div>
      </ion-col>
    </ion-row>
  </ion-grid>
  
</ion-content>
