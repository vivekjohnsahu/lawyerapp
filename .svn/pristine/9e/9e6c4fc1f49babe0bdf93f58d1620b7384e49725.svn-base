ion-toolbar{
    --background: #233658;
}
ion-back-button{
    color:#fff; 
}
ion-title{
    font-size: 16px;
    color: #fff;
    font-weight: 300;
}
.lawyers_img{
    position: relative;
}
.blur_img{
    width: 100%;
    height: 150px;
    overflow: hidden;
}
.blur_img > img{
    width: 100%;
    filter: blur(2px);
}
.lawyers_img > ion-avatar{
    position: absolute;
    bottom: -35px;
    left: calc(50% - 35px);
    width: 70px;
    height: 70px;
    border: 2px solid #fff;
    box-shadow: 0px 0px 16px 1px #000;
}
.lawyer_name{
    margin-top: 45px;
    text-align: center;
}
.lawyer_name > ion-text{
    font-size: 14px;
    color: #1f1f1f;
}
.lawyer_skill{
    background: #fff1e1;
    padding: 5px 10px;
    font-size: 15px;
    color: #1f1f1f;
    font-weight: 500;
}
.skill_type{
    padding: 10px 10px;
}
.skill_type > a{
    display: inline-flex;
    padding: 2px 10px;
    border: 1px solid #fd8902;
    font-size: 12px;
    background: #fff1e1;
    border-radius: 5px;
    margin: 0px 5px 5px 0px;
}
.lawyer_info{
    padding: 20px 10px 0px 10px;
}
.lawyer_info .address_icon{
    width: 10%;
    display: inline-block;
    text-align: center;
}
.lawyer_info .address_icon > img{
    width: 15px;
}
.lawyer_info .main_add{
    width: 90%;
    display: inline-block;
    vertical-align: text-top;
}
.lawyer_info .main_add > p{
    color: #1f1f1f;
    font-size: 13px;
    margin-bottom: 0px;
}
.email_info, .mobile_info{
    padding: 10px 15px;
}
.email_info > div:nth-child(1), .mobile_info > div:nth-child(1){
    width: 10%;
    display: inline-block;
    text-align: center;
}
.email_info > div:nth-child(1) > img, .mobile_info > div:nth-child(1) > img{
    width: 15px;
}
.email_info > div:nth-child(2), .mobile_info > div:nth-child(2){
    width: 90%;
    display: inline-block;
    color: #1f1f1f;
    font-size: 13px;
}
.document_uploaded{
    padding: 20px;
}
.document_uploaded > .dox{
    width: 20%;
    padding: 10px 5px;
    overflow: hidden;
    /* border: 1px solid #e2e2e2; */
    text-align: center;
    display: inline-block;
    box-shadow: 0px 3px 23px 0px rgba(0, 0, 0, 0.21);
    margin: 0% 2.5%;
}
.document_uploaded > .dox > ion-avatar{
    width: 100%;
    height: auto;
    border: 2px solid #233658;
}
.enquiry{
    text-align: center;
    margin: 0px 0px 10px 0px;
}
.enquiry > ion-button{
    font-size: 11px;
    text-transform: capitalize;
    font-weight: 400;
    --background: #233658;
}