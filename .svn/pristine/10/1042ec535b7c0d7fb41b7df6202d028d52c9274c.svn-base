a.search_icon {
  padding: 0px 6px;
}

.homepage_img {
  padding: 10px;
}


.homepage_img img {
  width: 100%;
}

.featured_div {
  padding: 5px 10px 5px 10px;
}

.featured_div>h3 {
  font-size: 15px;
  margin-top: 0px;
  margin-bottom: 0px;
}

.featured_div>h3>span {
  color: #fd8900;
}

.featured_grid {
  padding: 10px;
}

.featured_main {
  padding: 10px;
  box-shadow: 0px 3px 25px 2px rgba(0, 0, 0, 0.23);
  margin-bottom: 15px;
}

div.featured_image {
  width: 30%;
  display: inline-block;
  vertical-align: top;
}

.featured_image img {
  width: 60px;
  height: 60px;
  margin: 0 auto;
}

div.featured_text {
  width: 68%;
  display: inline-block;
  vertical-align: top;
  margin-left: 5px;
}

div.featured_text h4 {
  margin-top: 0px;
  font-size: 15px;
  margin-bottom: 5px;
}

div.featured_text p {
  margin: 0px;
  margin-bottom: 5px;
  font-size: 12px;
  color: rgba(31, 31, 31, 0.8);
}

.sevice_type {
  margin-bottom: 5px;
}

.sevice_type a {
  font-size: 12px;
  text-transform: capitalize;
  border: 1px solid #fd8902;
  padding: 0px 5px;
  background: #fff9f2;
  border-radius: 5px;
  margin-right: 5px;
  color: #1f1f1f;
}

