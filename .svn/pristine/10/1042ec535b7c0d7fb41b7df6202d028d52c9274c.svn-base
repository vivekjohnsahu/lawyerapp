.fixed_btn ion-fab-button {
  --ion-color-base: #f4a14e !important;
}

.fixed_btn ion-fab-button>img {
  width: 20px;
}

.fixed_btn {
  border-radius: 50%;
  box-shadow: 1px 1px 23px 1px #f4a14e;
}

.featured_main:focus {
  outline: none;
}
.image_div{
  display: inline-flex;
  align-items: center;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 1px solid #000;
  overflow: hidden;
}

.scroll{   
	position: fixed;
    bottom: 40px;
    cursor: pointer;
    z-index: 10;
    right: 30px;
    width: 40px;
    height: 40px;
    background: #233658;
    text-align: center;
    line-height: 40px;
    border-radius: 3px;
    border: 1px solid #233658;
    
}

.scroll a{
	display:block;
	color: white;
	font-size: 20px;
}