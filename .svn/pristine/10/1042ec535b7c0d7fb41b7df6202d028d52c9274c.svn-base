.welcome-card ion-img {
  max-height: 35vh;
  overflow: hidden;
}

ion-toolbar {
  --background: #233658;
}
.sidemenu_toolbar > ion-title{
      text-transform: capitalize !important;
}

ion-buttons ion-menu-button>img {
  width: 17px;
}

.search_icon_container img {
  width: 17px;
}

